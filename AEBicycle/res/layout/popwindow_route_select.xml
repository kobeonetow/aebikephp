<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ffffff"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/etRouteSrc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="14sp"
            android:hint="@string/route_my_location"/>
        <ImageButton 
            android:id="@+id/ibRouteSrcSel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:src="@drawable/route_arrow_sel"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/etRouteDst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="14sp"
            android:hint="@string/map_dst_hint"/>
        <ImageButton 
            android:id="@+id/ibRouteDstSel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:src="@drawable/route_arrow_sel"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton 
            android:id="@+id/ibRouteBike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/route_bike_sel"
            android:background="#00ffffff"/>
        <ImageButton 
            android:id="@+id/ibRouteCar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/route_car_sel"
            android:background="#00ffffff"/>
        <ImageButton 
            android:id="@+id/ibRouteBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/route_bus_sel"
            android:background="#00ffffff"/>
        <ImageButton 
            android:id="@+id/ibRouteSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/map_search"
            android:background="#00ffffff"/>
    </LinearLayout>
</LinearLayout>